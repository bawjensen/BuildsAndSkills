extends skeleton_base

block page-title
  = staticData.champs[champId].id

block body
  .row
    .col-xs-4
      img(src='/data/dragontail/current/img/champion/' + staticData.champs[champId].image.full)
    .col-xs-4= staticData.champs[champId].id
    .col-xs-4= staticData.champs[champId].title

  each match in gamesData
    .matchRow.row
      .col-xs-1= match.summonerName

      .col-xs-1= match.date

      .col-xs-1
        = match.lane

      .col-xs-1
        = match.winner ? 'Won' : 'Lost'
        
      .col-xs-1
        = match.kills + ' / ' + match.deaths + ' / ' + match.assists

      .col-xs-2
        - var trans = ['', 'Q', 'W', 'E', 'R'];
        each skillSlot in match.skillOrder
          = trans[skillSlot]

      //- .col-xs-1
      //-   each item in match.finalBuild
      //-     .row= staticData.items.data[item] ? staticData.items.data[item].name : item

      .col-xs-1
        each buy in match.buyOrder
          .row
            each amount, itemId in buy
              img.itemBuyOrder(src='/data/dragontail/current/img/item/' + staticData.items.data[itemId].image.full)
              = ' x' + amount

      .col-xs-1
        each rune in match.runes
          .row= rune.rank + ' ' + staticData.runes[rune.runeId].shortName

      .col-xs-2
        each mastery in match.masteries
          .row= staticData.masteries.data[mastery.masteryId].name + ' x' + mastery.rank

      .col-xs-1
        each spell in match.summonerSpells
          img.summSpell(src='/data/dragontail/current/img/spell/' + staticData.summSpells[spell].image.full)
